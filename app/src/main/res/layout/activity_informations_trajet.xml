<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_informations_trajet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ciayiti.speed.InformationsTrajet">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:text="Nombre de personnes au depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/pers"
            android:inputType="number" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:weightSum="1"
            android:layout_weight="0.72">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0.25" />

            <Button
                android:text="Nouvel arret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nArret"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="0.18" />

            <TextView
                android:text="Notes sur le trajet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:layout_weight="0.16"
                android:layout_gravity="start" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/Notes" />
        </LinearLayout>

        <Button
            android:text="Fin du trajet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ftrajet"
            android:layout_weight="0.35"
            android:textSize="18sp"
            android:background="@android:color/holo_red_dark" />

    </LinearLayout>
</RelativeLayout>
