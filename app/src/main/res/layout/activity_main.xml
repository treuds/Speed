<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ciayiti.speed.MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginBottom="178dp"
        android:text="@string/prix" />

    <Spinner
        android:id="@+id/Type_vehi"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/trajet"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp" />

    <EditText
        android:id="@+id/prix_course"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignEnd="@+id/trajet"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/capacite"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/trajet"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/trajet"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nom_chauffeur"
        android:layout_alignEnd="@+id/spinner"
        android:text="@string/trajet" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/Deconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Deconnexion"
        tools:text="@string/deconnexion" />

    <TextView
        android:id="@+id/labeligne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginTop="51dp"
        android:text="@string/ligne"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner"
        android:layout_centerVertical="true"
        android:text="@string/capacite" />

    <TextView
        android:id="@+id/textype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner"
        android:layout_alignTop="@+id/Type_vehi"
        android:text="@string/typevehi" />

    <EditText
        android:id="@+id/nom_chauffeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginBottom="107dp"
        android:ems="10"
        android:hint="@string/chauffeur"
        android:inputType="textPersonName" />

</RelativeLayout>
